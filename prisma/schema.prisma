generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?

  // Gamification stats
  level         Int       @default(1)
  xp            Int       @default(0)
  xpToNext      Int       @default(100)
  totalCities   Int       @default(0)
  totalLocations Int      @default(0)
  totalVisits   Int       @default(0)

  // Streak tracking
  currentStreak Int       @default(0)
  longestStreak Int       @default(0)
  lastActiveDate DateTime?

  // Profile visibility
  profilePublic Boolean   @default(true)

  // Relations
  accounts      Account[]
  sessions      Session[]
  cities        City[]
  neighborhoods Neighborhood[]
  locations     Location[]
  visits        Visit[]
  achievements  UserAchievement[]
  photos        Photo[]

  // Multi-user relations
  locationData     UserLocationData[]
  reviews          Review[]
  quests           Quest[]
  createdLocations Location[]         @relation("LocationCreator")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// CITIES
// ============================================

model City {
  id          String   @id @default(cuid())
  name        String
  country     String
  region      String?
  countryCode String?

  latitude    Float?
  longitude   Float?

  firstVisited DateTime?
  lastVisited  DateTime?
  visitCount   Int       @default(1)

  notes       String?   @db.Text

  locationCount Int     @default(0)

  userId        String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  neighborhoods Neighborhood[]
  locations     Location[]
  quests        Quest[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@unique([userId, name, country])
  @@index([userId])
  @@index([country])
}

// ============================================
// NEIGHBORHOODS
// ============================================

model Neighborhood {
  id          String     @id @default(cuid())
  name        String
  description String?    @db.Text

  latitude    Float?
  longitude   Float?

  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  cityId      String
  city        City       @relation(fields: [cityId], references: [id], onDelete: Cascade)
  locations   Location[]
  quests      Quest[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([userId, cityId, name])
  @@index([userId])
  @@index([cityId])
}

// ============================================
// LOCATIONS
// ============================================

enum LocationType {
  RESTAURANT
  BAR
  CAFE
  ATTRACTION
  HOTEL
  SHOP
  NATURE
  TRANSPORT
  MUSEUM
  BEACH
  NIGHTLIFE
  OTHER
}

model Location {
  id             String        @id @default(cuid())
  name           String
  type           LocationType
  cuisine        String?

  // Legacy field - to be removed after migration
  neighborhoodOld String?      @map("neighborhood")

  address        String?
  latitude       Float
  longitude      Float

  blurb          String?       @db.Text
  description    String?       @db.Text
  website        String?
  phone          String?
  hours          String?
  priceLevel     Int?
  otherInfo      String?       @db.Text

  visited        Boolean       @default(false)
  hotlist        Boolean       @default(false)

  tags           String[]

  // Aggregate stats (computed from reviews)
  avgRating      Float?
  ratingCount    Int           @default(0)
  reviewCount    Int           @default(0)
  totalVisits    Int           @default(0)

  // Legacy field - will be removed after migration to global locations
  userId         String?
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Creator tracking (not ownership - for multi-user)
  createdById    String?
  createdBy      User?         @relation("LocationCreator", fields: [createdById], references: [id], onDelete: SetNull)

  cityId         String
  city           City          @relation(fields: [cityId], references: [id], onDelete: Cascade)
  neighborhoodId String?
  neighborhood   Neighborhood? @relation(fields: [neighborhoodId], references: [id], onDelete: SetNull)

  // Existing relations
  visits         Visit[]
  photos         Photo[]

  // Multi-user relations
  userData       UserLocationData[]
  reviews        Review[]
  questItems     QuestItem[]

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([userId])
  @@index([createdById])
  @@index([cityId])
  @@index([neighborhoodId])
  @@index([type])
  @@index([latitude, longitude])
}

// ============================================
// VISITS (Check-ins)
// ============================================

model Visit {
  id          String   @id @default(cuid())
  date        DateTime

  overallRating    Int?
  foodQuality      Int?
  serviceRating    Int?
  ambianceRating   Int?
  valueRating      Int?

  notes       String?  @db.Text
  highlights  String[]

  xpEarned    Int      @default(0)

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  locationId  String
  location    Location @relation(fields: [locationId], references: [id], onDelete: Cascade)
  photos      Photo[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([locationId])
  @@index([date])
}

// ============================================
// PHOTOS
// ============================================

model Photo {
  id          String   @id @default(cuid())
  url         String
  caption     String?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  locationId  String?
  location    Location? @relation(fields: [locationId], references: [id], onDelete: Cascade)
  visitId     String?
  visit       Visit?   @relation(fields: [visitId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([locationId])
  @@index([visitId])
}

// ============================================
// ACHIEVEMENTS
// ============================================

model Achievement {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String
  icon        String
  xpReward    Int

  criteria    Json

  category    String
  tier        Int      @default(1)

  users       UserAchievement[]

  createdAt   DateTime @default(now())
}

model UserAchievement {
  id            String   @id @default(cuid())
  unlockedAt    DateTime @default(now())

  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
  @@index([userId])
}

// ============================================
// USER LOCATION DATA (Per-user data for each location)
// ============================================

model UserLocationData {
  id             String    @id @default(cuid())
  hotlist        Boolean   @default(false)
  visited        Boolean   @default(false)
  personalRating Int?      // 1-10, private to user
  notes          String?   @db.Text
  visitCount     Int       @default(0)
  firstVisitedAt DateTime?
  lastVisitedAt  DateTime?

  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  locationId     String
  location       Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([userId, locationId])
  @@index([userId])
  @@index([locationId])
}

// ============================================
// REVIEWS (Public reviews with moderation)
// ============================================

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

model Review {
  id             String       @id @default(cuid())
  title          String?
  content        String       @db.Text
  rating         Int          // 1-10, contributes to aggregate

  status         ReviewStatus @default(PENDING)
  moderatedAt    DateTime?
  moderatedBy    String?

  // Detailed ratings (optional)
  foodQuality    Int?
  serviceRating  Int?
  ambianceRating Int?
  valueRating    Int?

  authorId       String
  author         User         @relation(fields: [authorId], references: [id], onDelete: Cascade)
  locationId     String
  location       Location     @relation(fields: [locationId], references: [id], onDelete: Cascade)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([authorId])
  @@index([locationId])
  @@index([status])
}

// ============================================
// QUESTS (Trip Planning)
// ============================================

enum QuestStatus {
  PLANNING
  ACTIVE
  COMPLETED
  ARCHIVED
}

model Quest {
  id                   String        @id @default(cuid())
  name                 String
  description          String?       @db.Text

  targetCityId         String?
  targetCity           City?         @relation(fields: [targetCityId], references: [id], onDelete: SetNull)
  targetNeighborhoodId String?
  targetNeighborhood   Neighborhood? @relation(fields: [targetNeighborhoodId], references: [id], onDelete: SetNull)

  startDate            DateTime?
  endDate              DateTime?
  status               QuestStatus   @default(PLANNING)

  userId               String
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items                QuestItem[]

  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  @@index([userId])
  @@index([status])
  @@index([targetCityId])
  @@index([targetNeighborhoodId])
}

model QuestItem {
  id          String    @id @default(cuid())
  completed   Boolean   @default(false)
  completedAt DateTime?
  sortOrder   Int       @default(0)
  priority    Int       @default(0) // 1=high, 2=medium, 3=low
  notes       String?   @db.Text

  questId     String
  quest       Quest     @relation(fields: [questId], references: [id], onDelete: Cascade)
  locationId  String
  location    Location  @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([questId, locationId])
  @@index([questId])
  @@index([locationId])
}
